{
    "tasks": {
        "deploy-hitcounter": "deployctl deploy --prod --config=deploy-hitcounter.json",
        "deploy-reviser": "deployctl deploy --prod --config=deploy-reviser.json",
        "deploy-timeline": "deployctl deploy --prod --config=deploy-timeline.json",
        "deploy-webapp_starter": "deployctl deploy --prod --config=deploy-webapp_starter.json",
        "deploy-woodsprite": "deployctl deploy --prod --config=deploy-woodsprite.json"
    },

    "lint": {
        "exclude": ["**/public/**/*"],
        "rules": {
            "tags": ["recommended"],
            "include": [
                "camelcase",
                "default-param-last",
                "eqeqeq",
                "explicit-function-return-type",
                "explicit-module-boundary-types",
                "no-await-in-loop",
                "no-const-assign",
                "no-sparse-arrays",
                "no-sync-fn-in-async-fn",
                "no-throw-literal",
                "no-undef",
                "single-var-declarator",
                "verbatim-module-syntax"
            ]
        }
    }
}
